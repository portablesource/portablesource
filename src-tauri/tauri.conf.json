{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "portablesource",
  "version": "0.0.8",
  "identifier": "dev.portablesource",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:1337",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PortableSource",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": [
          "'self'",
          "https://portables.dev",
          "http://ipc.localhost"
        ],
        "style-src": "'self' 'unsafe-inline'"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://api.github.com/repos/portablesource/portablesource/releases/latest"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI3MzVGNjFDQzE2OUNFQTAKUldTZ3ptbkJIUFkxdHduU1d3bllTSTdpL3lHaEkyU0VFZWR0ZW5jTmkxb0ZGeDc0dXEvL2NZRzYK"
    },
    "allowlist": {
      "http": {
        "all": false,
        "scope": [
          "https://**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "wix": {
        "language": "en-US",
        "template": null
      },
      "nsis": {
        "displayLanguageSelector": false,
        "languages": [
          "English"
        ],
        "template": null,
        "headerImage": null,
        "sidebarImage": null,
        "installerIcon": null,
        "installMode": "currentUser"
      }
    }
  }
}